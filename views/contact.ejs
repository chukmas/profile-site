               <div class="container mt-5">
                  <div class="row">
                     <div class="col-md-6 offset-3">
                      <h1>Please fill the Form Below</h1>
                      <% if(typeof errors !=='undefined') { %>
                        <% errors.forEach((error)=>{ %>
                             <div class="text-danger">
                                 <%= error.msg %>  
                             </div>
                            <% }); %>
                       <% } %>
                       <% if(success_msg !=='') { %>
                        <div class="text-success">
                             <%= success_msg %>  
                         </div>
                   <% } %>
              <form  id="form" method="POST" action="/contact">
                <div>
                 <label></label>
                 <input type="text" placeholder="enter your name" name="fullname" class="form-control"
                 value="<%= typeof name != 'undefined' ? name :   '' %>" autocomplete="off" 
                 />
                 </div>
                 <div>
                    <label></label>
                    <input type="email" placeholder="enter your email" name="email" class="form-control"
                    value="<%= typeof email != 'undefined' ? email :   '' %>" autocomplete="off" 
                    />
                  </div>
                   <div>
                    <label></label>
                    <input type="text" placeholder="enter your number" name="number" class="form-control"
                    value="<%= typeof number != 'undefined' ? number :   '' %>" autocomplete="off" 
                    />
                    </div>
                    <div>
                        <label></label>
                        <textarea rows="4" cols="50" placeholder="leave a message" class="form-control"
                        value="<%= typeof message != 'undefined' ? message :   '' %>" autocomplete="off" 
                        name="message"
                        ></textarea>
                    </div>
                     <input type="submit" value="send message" class="btn bg-info form-control"/>
              </form>
